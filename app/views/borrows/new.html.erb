<div class="w-full flex flex-wrap px-32 py-12">
  <div class="px-12 w-full">
    <div class="w-full flex p-3 bg-darkThird">
      <%= image_tag "share.svg", alt: "share", width: 24, height: 24 %>
      <h3 class="ml-4 text-white font-bold text-md text-darkText">Ask a borrow</h3>
    </div>

    <%= form_for @borrow, :url => borrows_path, html: { method: :post, class: "flex justify-between mt-10 mx-10"} do |f| %>
      <div class="w-1/6">
        <img src="<%= @movie.poster%>" class="w-full h-32 object-cover" alt="<%= @movie.title %>"/>
      </div>
      <p class="text-md text-white my-auto"><%= @movie.title %> </p>
      <p class="text-md text-white my-auto"><%= @user.firstname %> <%= @user.lastname %> </p>

      <%= f.hidden_field(:movie_id, :value => @movie.id.to_s) %>
      <%= f.hidden_field(:owner_id, :value => @user.id.to_s) %>
      <%= f.date_field(:deadline, value: "deadline", min: Date.today, required: true, class: "bg-transparent text-white focus:outline-none") %>
      <div class="my-auto">
        <%= f.submit("Send the request", class: "rounded-full py-2 px-10 text-white bg-pinkPrincipal focus:outline-none focus:shadow-outline") %>
      </div>
    <% end %>
  </div>
</div>