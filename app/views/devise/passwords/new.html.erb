<div class="flex h-screen">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "bg-white shadow-md rounded-lg px-8 pt-6 pb-8 m-auto xl:w-1/3 w-1/2" }) do |f| %>

    <h2 class="text-center text-lg mb-6">Forgot your password?</h2>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label(:email, { class: "block text-gray-700 text-sm font-bold mb-2"}) %>
      <%= f.email_field(:email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border border-red-500 rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline") %>
    </div>

    <div class="text-center mt-2">
      <div class="actions mb-4 bg-blue-500 hover:bg-blue-700 text-white  py-2 px-4 rounded focus:outline-none focus:shadow-outline">
        <%= f.submit("Send me reset password instructions", class: "bg-transparent font-bold") %>
      </div>
      <%= link_to("Sign In", new_session_path(resource_name), class: "mb-2 block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800") %>
      <%= link_to("Sign Up", new_registration_path(resource_name), class: "block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800") %>
    </div>
  <% end %>
</div>
