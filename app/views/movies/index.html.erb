<div class="flex">
  <div class="w-24 h-screen fixed" style="background: #1F2F55">
    <!-- Sidebar -->
  </div>
  <div class="w-full pl-24">
    <div class="w-full h-20" style="background: #16274D">
      <!-- Search -->
    </div>
    <div class="w-full flex flex-wrap px-32 py-12">
      <% @movies.each do |movie| %>
        <%= link_to movie_path(movie.id), class:'card w-1/6' do %>
            <div class="px-12 py-10">
              <img src="<%= movie.poster %>" class="object-cover w-full" style="height: 350px" alt="<%= movie.title %>" />
              <h2 class="mt-3 mb-1 text-lg uppercase text-white"><%= movie.title %></h2>
              <p class="text-md" style="color: #59698F"><%= movie.year %></p>
            </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>