<div class="">
  <div class="flex" style="width: 900px">
    <div class="w-1/3">
      <img src="<%= @movie.poster%>" class="w-full" alt="<%= @movie.title %>"/>
      <div class="flex">
        <p class="my-4 mx-auto">Duration: <%= @movie.runtime %>m</p>
      </div>
    </div>
    <div class="w-2/3 p-4">
      <h2 class="text-xl mb-6 uppercase"><%= @movie.title%></h2>
      <div>
        <p><%= @movie.year%> | <%= @movie.genre %></p>
      </div>
      <p class="mt-2">Director: <%= @movie.director %></p>
      <p>Stars: <%= @movie.actors %></p>
      <div class="mt-5">
        <p><%= @movie.plot %></p>
      </div>
    </div>
  </div>

</div>
