<header class="h-screen">
  <div class="flex justify-between w-2/3 mx-auto mt-6">
    <h1 class="text-3xl font-bold text-white">Movy</h1>
    <%= link_to new_user_session_path, class: 'login-button' do %>
      <button class="bg-pinkPrincipal text-white font-bold py-2 px-8 rounded-full focus:outline-none">Sign in</button>
    <% end %>
  </div>

  <div class="flex flex-col mt-12 mb-4">
    <h1 class="home-page-title text-6xl	text-center">Find and Share your best movies</h1>
    <div class="flex flex-1 justify-center items-center mt-8">
      <img src="https://img3.cdn.cinoche.com/images/528ceb9a50125bed7ee7e41856aa3cfd.jpg" class="h-movie opacity-50 m-3 shadow-2xl" />
      <img src="https://encrypted-tbn2.gstatic.com/images?q=tbn:ANd9GcSqTrzB-zH0wn0j_vPh7oySR9B0Ot_HMsTZL40LclgJymYEvgQB" class="h-movie opacity-50 m-3 shadow-2xl" />
      <img src="https://media.senscritique.com/media/000018537250/source_big/Le_Chant_du_loup.jpg" class="h-movie-first m-3 shadow-2xl" />
      <img src="https://fr.web.img6.acsta.net/pictures/20/02/10/16/10/5324372.jpg" class="h-movie opacity-50 m-3 shadow-2xl" />
      <img src="https://miro.medium.com/max/675/1*LLiuBVqjoB0hEkKRNn6Ojw.png" class="h-movie opacity-50 m-3 shadow-2xl" />
    </div>
  </div>

  <div class="downArrow bounce absolute bottom-0 flex items-center justify-center">
    <%= image_tag "arrow-down.svg", alt: "arrow", width: 48, height: 48 %>
  </div>

  <div class="w-2/3 flex justify-between mt-48 mb-10 mx-auto text-gray-800">
    <div class="p-8 bg-darkThird w-1/3 mx-4">
      <div class="flex justify-between items-center">
        <h2 class="text-white text-2xl font-bold">Find</h2>
        <%= image_tag "search.svg", alt: "search", width: 32, height: 32 %>
      </div>
      <p class="pt-8 text-white">Movy offers you thousands of diverse and varied films. Find yours and share it with your friends.</p>
    </div>

    <div class="p-8 bg-darkThird w-1/3 mx-4">
      <div class="flex justify-between items-center">
        <h2 class="text-white text-2xl font-bold">Borrow</h2>
          <%= image_tag "borrow.svg", alt: "borrow", width: 32, height: 32 %>
        </div>
        <p class="pt-8 text-white">Our community offers you its best movies. Find yours and borrow it.</p>
      </div>

    <div class="p-8 bg-darkThird w-1/3 mx-4">
      <div class="flex justify-between items-center">
        <h2 class="text-white text-2xl font-bold">Share</h2>
          <%= image_tag "share.svg", alt: "share", width: 32, height: 32 %>
        </div>
        <p class="pt-8 text-white">Do you want to be part of our community? Share with us and submit your best movies. </p>
      </div>
  </div>
</header>
